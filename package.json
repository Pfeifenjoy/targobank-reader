{
	"name": "@arwed/targobank-reader",
	"version": "0.1.0",
	"description": "Convert Targobank PDF statements to hledger journal format",
	"keywords": [
		"targobank",
		"pdf",
		"hledger",
		"accounting"
	],
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"targobank-reader": "dist/bin.js"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"build": "npx tsc",
		"format:eslint": "npx eslint --fix .",
		"format:prettier": "npx prettier --write .",
		"format": "npm run format:prettier && npm run format:eslint",
		"test:lint:eslint": "npx eslint .",
		"test:lint:prettier": "npx prettier --check .",
		"test:lint:spell": "npx cspell .",
		"test:lint": "npm run test:lint:prettier && npm run test:lint:eslint && npm run test:lint:spell",
		"test:unit": "c8 npx playwright test",
		"test": "npm run test:lint && npm run test:unit",
		"release": "npm run clean && npm run build && npm run test",
		"prepare": "husky"
	},
	"devDependencies": {
		"@playwright/test": "^1.55.0",
		"@types/node": "^24.10.1",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"c8": "^10.1.3",
		"cspell": "^8.0.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsdoc": "^50.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"globals": "^16.0.0",
		"husky": "^9.0.0",
		"prettier": "^3.0.0",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"commander": "^14.0.2"
	},
	"c8": {
		"check-coverage": true,
		"lines": 100,
		"functions": 100,
		"branches": 100,
		"statements": 100
	}
}
